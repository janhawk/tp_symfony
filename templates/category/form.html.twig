{% extends "baseAdmin.html.twig" %}

{% block title %}{{ app.request.attributes.get('_route') == 'category_create' ? 'création' : 'modification' }} produit{% endblock %}

{% block body %}

    <h1 class="mb-5">{{ app.request.attributes.get('_route') == 'category_create' ? 'Créer' : 'Modifier' }} un produit</h1>

    {# {{ form(categoryForm) }} #}

    {{ form_start(categoryForm) }}

        <div class="row">
            <div class="col-6">
                {# {{ form_row(categoryForm.name) }} #}
                {{ form_label(categoryForm.name, 'Nom') }}
                {{ form_errors(categoryForm.name) }}
                {{ form_widget(categoryForm.name, {
                    'attr': {
                        'placeholder': 'Ex.: Jan'
                    }
                }) }}
                {{ form_help(categoryForm.name) }}
            </div>
            <div class="col-3">
                {{ form_row(categoryForm.quantity, {
                    'label': 'Quantité',
                    'attr': {
                        'placeholder': 'Ex.: 12'
                    }
                }) }}
            </div>
            <div class="col-3">
                {{ form_row(categoryForm.price, {
                    'label': 'Prix (en €)',
                    'attr': {
                        'placeholder': 'Ex.: 123.45'
                    }
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                {{ form_row(categoryForm.abstract, {
                    'label': 'Résumé',
                    'attr': {
                        'placeholder': 'Ex.: Lorem ipsum dolor sit amet consectetur adipisicing elit. Expedita provident et quod. Vero aliquid praesentium earum eos, facilis doloremque tempora ab quidem incidunt ! Ea, dignissimos. Quas sed modi sapiente dolorem ?'
                    }
                }) }}
            </div>
            <div class="col-6">
                {{ form_row(categoryForm.description, {
                    'label': 'Description',
                    'attr': {
                        'placeholder': 'Ex.: Lorem ipsum dolor sit amet consectetur adipisicing elit. Expedita provident et quod. Vero aliquid praesentium earum eos, facilis doloremque tempora ab quidem incidunt ! Ea, dignissimos. Quas sed modi sapiente dolorem ?'
                    }
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(categoryForm.min_players, {
                    'label': 'Joueurs minimum',
                    'attr': {
                        'placeholder': 'Ex.: 1'
                    }
                }) }}
            </div>
            <div class="col">
                {{ form_row(categoryForm.max_players, {
                    'label': 'Joueurs maximum',
                    'attr': {
                        'placeholder': 'Ex.: 2'
                    }
                }) }}
            </div>
            <div class="col">
                {{ form_row(categoryForm.minimum_age, {
                    'label': 'Âge minimum',
                    'attr': {
                        'placeholder': 'Ex.: 3'
                    }
                }) }}
            </div>
            <div class="col">
                {{ form_row(categoryForm.duration, {
                    'label': 'Durée'
                }) }}
            </div>
            <div class="col">
                {{ form_row(categoryForm.editor, {
                    'label': 'Éditeur',
                    'attr': {
                        'placeholder': 'Ex.: Jan'
                    }
                }) }}
            </div>
            <div class="col">
                {{ form_row(categoryForm.category, {
                    'label': 'Catégorie',
                    'placeholder': '-- sélectionner --'
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                {{ form_row(categoryForm.theme, {
                    'label': 'Thème(s)',
                    'attr': {
                        'placeholder': 'Ex.: France, guerre'
                    }
                }) }}
            </div>
            <div class="col-6">
                {{ form_row(categoryForm.mecanism, {
                    'label': 'Mécanisme(s)',
                    'attr': {
                        'placeholder': 'Ex.: placement, draft'
                    }
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                {{ form_row(categoryForm.img1, {
                    'label': 'Image principale (obligatoire)'
                }) }}
            </div>
            <div class="col-4">
                {{ form_row(categoryForm.img2, {
                    'label': 'Image secondaire 1 (optionnel)'
                }) }}
            </div>
            <div class="col-4">
                {{ form_row(categoryForm.img3, {
                    'label': 'Image secondaire 2 (optionnel)'
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-12 text-end my-3">
                <a href="{{ path('admin_categorys')}}" class="btn btn-outline-danger me-3">Annuler</a>
                {# app.request.attributes.get('_route') pour récupérer la route actuelle #}
                <button class="btn btn-success">{{ app.request.attributes.get('_route') == 'category_create' ? 'Créer' : 'Modifier' }} </button>
            </div>
        </div>

    {{ form_end(categoryForm) }}

{% endblock %}
